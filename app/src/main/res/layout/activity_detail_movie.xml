<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovieActivity"
    android:background="#2b2b2b">

    <GridLayout
        android:id="@+id/grid1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/ilust"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:background="@drawable/poster_aquaman"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="15sp"
                android:textColor="#9f9f9f"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/title"
                android:fontFamily="casual"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:layout_below="@+id/text"
                android:text="Aquaman the Little Mermaid"
                android:textSize="15sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/text2"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="15sp"
                android:textColor="#9f9f9f"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/category"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:layout_below="@+id/text2"
                android:text="Action, Blockbuster"
                android:textSize="15sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/text3"
                android:layout_below="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="15sp"
                android:textColor="#9f9f9f"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/year"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:layout_below="@+id/text3"
                android:text="2018"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </GridLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@+id/grid1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">
        <GridLayout
            android:background="#3c3f41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="1dp"
            android:numColumns="2">
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/star"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/rate"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="8,5/10"
                    android:textColor="#fff"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/metascore"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#07b105"
                    android:textSize="17sp"
                    android:textColor="#fff"
                    android:padding="9dp"
                    android:text="84"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/metascore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Metascore"
                    android:textColor="#fff"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </GridLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_below="@id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:background="#3c3f41"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textSize="15sp"
                android:textColor="#9f9f9f"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/synopsis"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:layout_below="@+id/text4"
                android:text="loading..."
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>