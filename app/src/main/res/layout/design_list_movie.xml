<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_movie"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2b2b2b">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#3c3f41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ilust_movie"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/poster_aquaman"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/title_movie"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:fontFamily="casual"
                android:textSize="17sp"
                android:text="AQUAMAN The litle mermaid"
                android:layout_marginStart="100dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/category_movie"
                android:textSize="10sp"
                android:textStyle="italic"
                android:textColor="#c1c1c1"
                android:layout_marginLeft="100dp"
                android:layout_below="@+id/title_movie"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Action, Blockbuster"
                android:layout_marginStart="100dp"
                tools:ignore="HardcodedText,SmallSp" />
            <ImageView
                android:id="@+id/star"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/star"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/rate_movie"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_below="@+id/star"
                android:layout_marginRight="20dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="8,4/10"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>