<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovieActivity"
    android:scrollbars="vertical"
    android:background="#2b2b2b">

    <GridLayout
        android:id="@+id/grid1"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/ilust"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:background="@drawable/poster_aquaman"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_tv"
                android:textSize="15sp"
                android:textColor="#9f9f9f" />
            <TextView
                android:id="@+id/title"
                android:fontFamily="casual"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:layout_below="@+id/text"
                android:text="Aquaman the Little Mermaid"
                android:textSize="15sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/text2"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_tv"
                android:textSize="15sp"
                android:textColor="#9f9f9f" />
            <TextView
                android:id="@+id/category"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:layout_below="@+id/text2"
                android:text="Action, Blockbuster"
                android:textSize="15sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/text3"
                android:layout_below="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/year_tv"
                android:textSize="15sp"
                android:textColor="#9f9f9f" />
            <TextView
                android:id="@+id/year"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:layout_below="@+id/text3"
                android:text="2018"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </GridLayout>

    <GridLayout
        android:id="@+id/grid2"
        app:layout_constraintTop_toBottomOf="@id/grid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/text5"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/stars"
                android:textColor="#9f9f9f"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/stars"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Anna, Sowa"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_below="@id/text5"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="20dp" />
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/grid1"
            android:layout_marginStart="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3c3f41"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/star"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="8,5/10"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/grid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:background="#3c3f41"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/synopsis_tv"
                android:textSize="15sp"
                android:textColor="#9f9f9f" />
            <TextView
                android:id="@+id/synopsis"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:layout_below="@+id/text4"
                android:text="loading..."
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>